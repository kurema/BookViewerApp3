<Application
    x:Class="BookViewerApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookViewerApp"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    >
    <Application.Resources>
        <controls:XamlControlsResources>
            <controls:XamlControlsResources.MergedDictionaries>
                <ResourceDictionary>
                    <!-- https://zenn.dev/okazuki/articles/contentdialog-size-limitation -->
                    <!-- https://github.com/microsoft/microsoft-ui-xaml/issues/424 -->
                    <x:Double x:Key="ContentDialogMaxWidth">1600</x:Double>
                    <x:Double x:Key="ContentDialogMaxHeight">900</x:Double>
                </ResourceDictionary>
            </controls:XamlControlsResources.MergedDictionaries>
        </controls:XamlControlsResources>
        <!--<ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>-->
    </Application.Resources>
</Application>
