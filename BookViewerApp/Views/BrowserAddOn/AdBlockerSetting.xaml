<Page
    x:Class="BookViewerApp.Views.BrowserAddOn.AdBlockerSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookViewerApp.Views.BrowserAddOn"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicWindowBrush}"
    
    xmlns:ValueConverter="using:BookViewerApp.ValueConverters"
    xmlns:vm="using:BookViewerApp.ViewModels"
    xmlns:v="using:BookViewerApp.Views"
    xmlns:fv="using:kurema.FileExplorerControl.Views.Viewers"
    x:Name="main"
    >
    <Page.DataContext>
        <vm:AdBlockerSettingViewModel />
    </Page.DataContext>
    <Page.Resources>
        <ValueConverter:LocalizeConverter x:Key="LocalizeConverter"/>
        <CollectionViewSource x:Name="FiltersSource" Source="{Binding FilterList}" IsSourceGrouped="True" />
    </Page.Resources>
    <Pivot>
        <PivotItem Header="{x:Bind Converter={StaticResource LocalizeConverter},ConverterParameter='Extension.AdBlocker.Filters.Header'}">
            <ListView VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ItemsSource="{Binding Source={StaticResource FiltersSource}}" SelectionMode="None">
                <ListView.Header>
                    <CommandBar DefaultLabelPosition="Right" HorizontalAlignment="Left">
                        <AppBarButton Icon="Accept" Label="Apply" Command="{Binding RefreshCommand}" />
                        <AppBarToggleButton Icon="Refresh" Label="Refresh all" IsChecked="{Binding RefreshAll,Mode=TwoWay}"/>
                    </CommandBar>
                </ListView.Header>
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="vm:AdBlockerSettingFilterViewModel">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsEnabled,Mode=TwoWay}" >
                                <TextBlock Text="{Binding Title}"/>
                            </CheckBox>
                            <CommandBar DefaultLabelPosition="Collapsed">
                                <AppBarToggleButton Icon="Refresh" IsChecked="{Binding IsRefreshRequested,Mode=TwoWay}" IsEnabled="{Binding IsEnabled,Mode=OneWay}"/>
                                <AppBarButton Icon="World" Command="{Binding ElementName=main,Path=OpenWebCommand}" CommandParameter="{Binding ProjectSource}" ToolTipService.ToolTip="{Binding ProjectSource}" ToolTipService.Placement="Bottom"/>
                                <AppBarButton Icon="Document" Command="{Binding ElementName=main,Path=OpenWebCommand}" CommandParameter="{Binding LicenseSource}" ToolTipService.ToolTip="{Binding LicenseSummary}" ToolTipService.Placement="Top"/>
                            </CommandBar>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </PivotItem>
        <PivotItem Header="{x:Bind Converter={StaticResource LocalizeConverter},ConverterParameter='Extension.AdBlocker.CustomFilters.Header'}">
            <fv:TextEditorPage x:Name="textEditorCustomFilters" CanChageSavePath="False" IsSpellCheckEnabled="False" SavingFile="textEditorCustomFilters_SavingFile" />
        </PivotItem>
        <PivotItem Header="{x:Bind Converter={StaticResource LocalizeConverter},ConverterParameter='Extension.AdBlocker.TrustedSites.Header'}">
            <fv:TextEditorPage x:Name="textEditorTrustedSites" CanChageSavePath="False" IsSpellCheckEnabled="False" />
        </PivotItem>
        <PivotItem Header="{x:Bind Converter={StaticResource LocalizeConverter},ConverterParameter='Extension.AdBlocker.Info.Header'}">
            <ScrollViewer>
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="v:AcrylicButtonControl">
                            <Setter Property="VerticalAlignment" Value="Top" />
                            <Setter Property="Margin" Value="0" />
                        </Style>
                        <Style TargetType="TextBlock" x:Key="InfoHeader">
                            <Setter Property="FontSize" Value="38" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="TextBlock" x:Key="InfoLabel">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.ColumnSpan="2">
                        <TextBlock Text="You have to download filter before you use." FontWeight="Bold" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>
                    </StackPanel>
                    <NavigationViewItemSeparator Grid.ColumnSpan="2" Grid.Row="1" />
                    <TextBlock Text="Document" FontWeight="Bold" Style="{StaticResource InfoHeader}" Grid.ColumnSpan="2" Grid.Row="2" />
                    <TextBlock Text="Open this to get general informations." Style="{StaticResource InfoLabel}" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="3"/>
                    <v:AcrylicButtonControl Margin="0" Icon="World" Click="Button_Click_Open" Tag="https://github.com/kurema/BookViewerApp3/blob/master/res/Docs/AdBlocker/readme.md" Grid.Column="0" Grid.Row="3"/>
                    <NavigationViewItemSeparator Grid.ColumnSpan="2" Grid.Row="4" />
                    <TextBlock Text="Folders"  Style="{StaticResource InfoHeader}" Grid.ColumnSpan="2" Grid.Row="5"/>
                    <TextBlock Text="Open the filters folder." Style="{StaticResource InfoLabel}"  Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="6"/>
                    <v:AcrylicButtonControl Margin="0" Icon="Folder" Grid.Row="6" />
                    <TextBlock Text="Open the setting folder." Style="{StaticResource InfoLabel}"  Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="7"/>
                    <v:AcrylicButtonControl Margin="0" Icon="Folder" Grid.Row="7" />
                </Grid>

                <!--<StackPanel>
                    <RichTextBlock>
                        <Paragraph>
                            <Bold FontSize="38">How this work?</Bold>
                        </Paragraph>
                        <Paragraph>This is the embbeded ad blocker.</Paragraph>
                    </RichTextBlock>
                </StackPanel>-->
            </ScrollViewer>
        </PivotItem>
    </Pivot>
</Page>
